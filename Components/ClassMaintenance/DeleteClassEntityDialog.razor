@inherits DeleteClassEntityDialogBase

@if (ShowDialog)
{
<div class="modal fade show d-block" id="exampleModal" tabindex="-1" role="dialog" style="color:black">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="titleLabel">Delete your Class?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <EditForm Model="@StringMatcher" OnValidSubmit="@HandleValidSubmit">

                    <DataAnnotationsValidator />
                    <ValidationSummary />
                    <div class="form-group">
                        <label for="classEntityName">Enter '@ClassEntity.Name' to delete your class: </label>
                        <InputText id="name" class="form-control" @bind-Value="@StringMatcher.Input" placeholder="enter class name here"></InputText>
                        <ValidationMessage For="@(() => StringMatcher.Input)" />
                    </div>
                    <button type="submit" class="btn red-button">Confirm Delete</button>
                    <a class="btn btn-outline-primary" @onclick="@Close">Close</a>
                </EditForm>

            </div>
        </div>
    </div>
</div>
}
