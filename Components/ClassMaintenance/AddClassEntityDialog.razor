@inherits AddClassEntityDialogBase

@if (ShowDialog)
{
    <div class="modal fade show d-block" id="exampleModal" tabindex="-1" role="dialog" style="color:black">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="titleLabel">Create a New Class</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <EditForm Model="@ClassEntity" OnValidSubmit="@HandleValidSubmit">

                        <DataAnnotationsValidator />
                        <div class="form-group">
                            <label for="lastName">Class Name: </label>
                            <InputText id="name" class="form-control" @bind-Value="@ClassEntity.Name" placeholder="Enter class name"></InputText>
                            <ValidationMessage For="@(() => ClassEntity.Name)" />
                        </div>
                        <button type="submit" class="btn btn-primary">Create Class</button>
                        <a class="btn btn-outline-primary" @onclick="@Close">Close</a>
                    </EditForm>

                </div>
            </div>
        </div>
    </div>
}
